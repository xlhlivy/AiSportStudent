<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_color">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <TextView
            android:text="压力值"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <RatingBar
            android:layout_gravity="center_vertical"
            android:id="@+id/rbPress"
            style="@style/RatingBarOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="20dp"
            android:minHeight="20dp"
            android:rating="3"
            android:stepSize="1"
            android:clickable="false"
            android:isIndicator="false"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:padding="16dp"
        android:background="@drawable/day_detail_white_background_normal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/tvPress"
            tools:text="12321\n123213213"
            android:lineSpacingMultiplier="1.2"
            android:textSize="12dp"
            android:textColor="#6d819c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <TextView
            android:text="疲劳程度"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <RatingBar
            android:layout_gravity="center_vertical"
            android:id="@+id/rbFatigue"
            style="@style/RatingBarOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="20dp"
            android:minHeight="20dp"
            android:rating="3"
            android:stepSize="1"
            android:clickable="false"
            android:isIndicator="false"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:padding="16dp"
        android:background="@drawable/day_detail_white_background_normal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvFatigue"
            tools:text="12321\n123213213"
            android:lineSpacingMultiplier="1.2"
            android:textSize="12dp"
            android:textColor="#6d819c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <TextView
            android:text="心血管健康"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:src="@drawable/day_icon_help"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <RatingBar
            android:layout_gravity="center_vertical"
            android:id="@+id/rbBlood"
            style="@style/RatingBarGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="20dp"
            android:minHeight="20dp"
            android:rating="3"
            android:stepSize="1"
            android:clickable="false"
            android:isIndicator="false"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:padding="16dp"
        android:background="@drawable/day_detail_white_background_normal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/day_tab_icon_action_press"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <TextView
                android:id="@+id/tvQuietlyHeartRate"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:text="安静心率"
                android:gravity="center_vertical"
                android:textColor="#6d819c"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageView
                android:src="@drawable/day_icon_help"
                android:layout_gravity="center_vertical"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <ImageView
                android:layout_marginLeft="18dp"
                android:src="@drawable/day_icon_chart"
                android:layout_gravity="center_vertical"
                android:layout_width="22dp"
                android:layout_height="22dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvRecentlyHeartRate"
                    tools:text="80"
                    android:textSize="23dp"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:textColor="@color/text_black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="10dp"
                    android:id="@+id/tvUnit1"
                    android:layout_marginLeft="6dp"
                    android:text="次/分钟"
                    android:textColor="#6d819c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvMorningHeartRate"
                    tools:text="80"
                    android:textSize="23dp"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:textColor="@color/text_black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="10dp"
                    android:layout_marginLeft="6dp"
                    android:text="次/分钟"
                    android:textColor="#6d819c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvHeartRateAbility"
                    tools:text="80"
                    android:textSize="23dp"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:textColor="@color/text_black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="最近一次"
                android:textSize="12dp"
                android:textColor="#6d819c"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <TextView
                android:text="晨脉"
                android:textSize="12dp"
                android:textColor="#6d819c"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <TextView
                android:text="心率恢复能力"
                android:textSize="12dp"
                android:textColor="#6d819c"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:padding="16dp"
        android:background="@drawable/day_detail_white_background_normal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/day_icon_blood_pressure"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <TextView
                android:id="@+id/tvBloodPressure"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:text="当前血压"
                android:gravity="center_vertical"
                android:textColor="#6d819c"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageView
                android:src="@drawable/day_icon_help"
                android:layout_gravity="center_vertical"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <ImageView
                android:layout_marginLeft="18dp"
                android:src="@drawable/day_icon_chart"
                android:layout_gravity="center_vertical"
                android:layout_width="22dp"
                android:layout_height="22dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvBloodPressureBase"
                    tools:text="80"
                    android:textSize="23dp"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:textColor="@color/text_black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="10dp"
                    android:layout_marginLeft="6dp"
                    android:text="基础血压(mmhg)"
                    android:textColor="#6d819c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPulsePressure"
                    tools:text="80"
                    android:textSize="23dp"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:textColor="@color/text_black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="10dp"
                    android:layout_marginLeft="6dp"
                    android:text="脉压(mmhg)"
                    android:textColor="#6d819c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</LinearLayout>