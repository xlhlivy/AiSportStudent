<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/ivCardBg"
            app:layout_constraintTop_toBottomOf="@id/tvHealthPlan"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            app:layout_constraintDimensionRatio="2.57"
            android:layout_height="0dp"/>


        <TextView
            android:id="@+id/tvCardName"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@id/ivCardBg"
            app:layout_constraintLeft_toLeftOf="@id/ivCardBg"
            android:textSize="20dp"
            android:textColor="@color/white"
            tools:text="派费特健身卡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCardDescription"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvCardName"
            app:layout_constraintLeft_toLeftOf="@id/tvCardName"
            android:textSize="12dp"
            android:textColor="@color/white"
            tools:text="派费特健身卡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintBottom_toBottomOf="@id/ivCardBg"
            app:layout_constraintRight_toRightOf="@id/ivCardBg"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:id="@+id/tvCardTake"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:text="领取"
            android:background="@drawable/view_border"
            android:gravity="center"
            android:textColor="#3a5291"
            />



        <!--<ImageView-->
        <!---->
        <!--android:src="@drawable/day_card_purple"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="126dp" />-->




</android.support.constraint.ConstraintLayout>