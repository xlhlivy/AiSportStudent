<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@android:color/transparent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/course_item_background_banner1"
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <ImageView
        android:id="@+id/ivTag"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="@id/ivBackground"
        app:layout_constraintTop_toTopOf="@id/ivBackground"
        android:layout_width="45dp"
        android:layout_height="45dp" />


    <TextView
        android:id="@+id/tvCourseName"
        app:layout_constraintLeft_toLeftOf="@id/ivBackground"
        app:layout_constraintTop_toTopOf="@id/ivBackground"
        android:layout_margin="20dp"
        tools:text="身体唤醒"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tvCourseTeacher"
        app:layout_constraintLeft_toLeftOf="@id/tvCourseName"
        app:layout_constraintTop_toBottomOf="@id/tvCourseName"
        android:layout_marginTop="20dp"
        tools:text="身体唤醒"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tvCourseTime"
        app:layout_constraintLeft_toLeftOf="@id/tvCourseTeacher"
        app:layout_constraintTop_toBottomOf="@id/tvCourseTeacher"
        android:layout_marginTop="2dp"
        tools:text="身体唤醒"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:visibility="gone"
        android:id="@+id/btnDone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        android:layout_width="60dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="12dp"
        android:text="报名"
        android:background="@drawable/day_btn_detail_background"
        android:gravity="center"
        android:textColor="@color/white"
        />

</android.support.constraint.ConstraintLayout>